{
    "name": "@riddance/env",
    "version": "0.0.7",
    "type": "module",
    "keywords": [
        "riddance",
        "environment",
        "devenv",
        "opinionated"
    ],
    "license": "MIT",
    "dependencies": {
        "@types/node": "^16",
        "@types/mocha": "10.0.0",
        "@tsconfig/node16": "1.0.3",
        "@typescript-eslint/eslint-plugin": "5.41.0",
        "@typescript-eslint/parser": "5.41.0",
        "cspell-lib": "6.12.0",
        "eslint": "8.26.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-prefer-arrow": "1.2.3",
        "eslint-plugin-promise": "6.1.1",
        "mocha": "10.1.0",
        "prettier": "2.7.1",
        "source-map-support": "0.5.21",
        "typescript": "4.8.4"
    },
    "devDependencies": {
        "@types/eslint": "8.4.8",
        "@types/prettier": "2.7.1"
    },
    "scripts": {
        "watch": "tsc && node ./bin/prepare.js && node ./bin/install.js && node ./bin/watch.js",
        "prepare": "tsc && eslint && node ./bin/prepare.js",
        "postinstall": "node ./bin/install.js"
    },
    "files": [
        "template/**",
        "bin/*.js",
        "bin/lib/*.js"
    ],
    "bin": {
        "watch": "./bin/watch.js"
    }
}
